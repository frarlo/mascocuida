<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp"
    android:layout_margin="5dp"
    android:background="@color/mascoblue"
    android:layout_gravity="start">

    <TextView
        android:id="@+id/recycler_carer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre cuidador"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_gravity="start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/recycler_carer_rating"
        />

    <TextView
        android:id="@+id/recycler_carer_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintStart_toEndOf="@id/recycler_carer_name"
        app:layout_constraintEnd_toStartOf="@id/recycler_star"/>

    <ImageView
        android:id="@+id/recycler_star"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/rating_star"
        android:layout_gravity="start"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintStart_toEndOf="@id/recycler_carer_rating"
        app:layout_constraintEnd_toStartOf="@id/recycler_carer_profile"
        />

    <Button
        android:id="@+id/recycler_carer_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver perfil"
        android:layout_gravity="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/mascoemphasis"/>


</androidx.constraintlayout.widget.ConstraintLayout>