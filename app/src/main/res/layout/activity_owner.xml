<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OwnerActivity"
    android:orientation="vertical"
    android:background="@color/mascoemphasis">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:src="@drawable/logo_long"
        android:textSize="40sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/text_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Hola"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"/>


        <ImageView
            android:id="@+id/image_welcome"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:contentDescription="User's profile pic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center">

    <Button
        android:id="@+id/button_pets"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/mascoblue"
        android:drawableLeft="@drawable/heart_line"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Mis mascotas" />

    <Button
        android:id="@+id/button_services"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/mascoblue"
        android:drawableLeft="@drawable/list_doc"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Mis cuidados" />

    <Button
        android:id="@+id/button_carers"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/mascoblue"
        android:drawableLeft="@drawable/carer_search"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Buscar cuidadores" />

    <Button
        android:id="@+id/button_profile"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/mascoblue"
        android:drawableLeft="@drawable/edit_pen"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Modificar mis datos" />

    </LinearLayout>

    <Button
        android:id="@+id/button_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:text="Consulta los términos de Mascocuida"/>

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:textColor="@color/white"
        android:text="Cierra tu sesión de usuario" />


</LinearLayout>