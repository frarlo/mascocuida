<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        app:cardBackgroundColor="@color/mascoemphasis"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/pop_up_header"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Dynamic text"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                />

            <TextView
                android:id="@+id/pop_up_subheader"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Dynamic text"
                android:textColor="@color/white"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_pop_left"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="AtrÃ¡s"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/redject"
                    />

                <Button
                    android:id="@+id/button_pop_right"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:text="Vale"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/greenaccept"
                    />



            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
